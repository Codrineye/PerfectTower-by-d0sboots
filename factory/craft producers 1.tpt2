gds("craft_queue_" . i2s((tier * tier_factor) + producer_blue), gdg("craft_queue_" . i2s((tier * tier_factor) + producer_blue)) - (count("producer.workshop", tier) - previous_amount))

previous_amount = count("producer.constructionFirm", tier)
