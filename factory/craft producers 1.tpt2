previous_amount = count("producer.laboratory", tier)
craft("producer.laboratory", tier, gdg("craft_queue_" . i2s((tier * tier_factor) + producer_green)))
gds("craft_queue_" . i2s((tier * tier_factor) + producer_green), gdg("craft_queue_" . i2s((tier * tier_factor) + producer_green)) - (count("producer.laboratory", tier) - previous_amount))


gotoif(tierloop, tier < 5)
