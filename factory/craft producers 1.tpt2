gds("craft_queue_" . i2s((tier * tier_factor) + producer_orange), gdg("craft_queue_" . i2s((tier * tier_factor) + producer_orange)) - (count("producer.mine", tier) - previous_amount))

previous_amount = count("producer.workshop", tier)
